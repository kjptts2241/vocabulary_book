<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WordAddActivity">

    <TextView
        android:id="@+id/word_study_text"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:text="원어 단어"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/word_study"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="text"
        android:text="원어 단어를 입력해주세요"
        android:textColor="#808080"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_study_text" />

    <TextView
        android:id="@+id/word_korea_text"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="한글 단어"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_study" />

    <EditText
        android:id="@+id/word_korea"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="text"
        android:text="한글 단어를 입력해주세요"
        android:textColor="#808080"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_korea_text" />

    <TextView
        android:id="@+id/word_pronunciation_text"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="발음"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_korea" />

    <EditText
        android:id="@+id/word_pronunciation"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="text"
        android:text="정확한 발음을 입력해주세요"
        android:textColor="#808080"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_pronunciation_text" />

    <TextView
        android:id="@+id/word_explanation_text"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="추가 설명"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_pronunciation" />

    <EditText
        android:id="@+id/word_explanation"
        android:layout_width="306dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="text"
        android:text="예시를 입력해주세요"
        android:textColor="#808080"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_explanation_text" />

    <Button
        android:id="@+id/word_add_button"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:text="단어 등록"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_explanation" />

    <Button
        android:id="@+id/word_add_cancel_button"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        android:text="취소"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_explanation" />

</androidx.constraintlayout.widget.ConstraintLayout>