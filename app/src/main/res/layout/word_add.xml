<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/word_study"
        android:layout_width="304dp"
        android:layout_height="69dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="text"
        android:text="공부 단어"
        android:textSize="28sp"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/word_korea"
        android:layout_width="304dp"
        android:layout_height="69dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="한글 단어"
        android:textSize="28sp"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_study" />

    <EditText
        android:id="@+id/word_pronunciation"
        android:layout_width="304dp"
        android:layout_height="69dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="발음"
        android:textSize="28sp"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_korea" />

    <EditText
        android:id="@+id/word_explanation"
        android:layout_width="304dp"
        android:layout_height="69dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="추가 설명"
        android:textColor="#808080"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_pronunciation" />

    <Button
        android:id="@+id/word_add_button"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="66dp"
        android:text="단어 등록"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_explanation" />

    <Button
        android:id="@+id/word_add_cancel_button"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="56dp"
        android:text="취소"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_explanation" />

</androidx.constraintlayout.widget.ConstraintLayout>